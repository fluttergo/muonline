<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <BaseTFMs>net9.0</BaseTFMs>
    <WindowsTFM Condition="'$(OS)'=='Windows_NT'">;net9.0-windows</WindowsTFM>
    <MobileTFMs Condition="'$(EnableMobileTargets)'=='true'">;net9.0-android;net9.0-ios</MobileTFMs>
    <OutputType>Library</OutputType>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <ImplicitUsings>enable</ImplicitUsings>
    <TargetFramework>net9.0</TargetFramework>
    <LangVersion>13</LangVersion>
  </PropertyGroup>

  <!-- MONOGAME -->
  <ItemGroup Condition="'$(TargetFramework)'!='net9.0-android' AND '$(TargetFramework)'!='net9.0-ios'">
    <PackageReference Include="MonoGame.Framework.DesktopGL" Version="3.8.4" />
  </ItemGroup>
  <ItemGroup Condition="'$(TargetFramework)'=='net9.0-android'">
    <PackageReference Include="MonoGame.Framework.Android" Version="3.8.4" />
  </ItemGroup>
  <ItemGroup Condition="'$(TargetFramework)'=='net9.0-ios'">
    <PackageReference Include="MonoGame.Framework.iOS" Version="3.8.4" />
  </ItemGroup>

  <!-- Microsoft.Extensions* -->
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging" Version="9.0.8" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="9.0.8" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="9.0.8" />
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="9.0.8" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="9.0.8" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="9.0.8" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="9.0.8" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Pipelines.Sockets.Unofficial" Version="2.2.16" />
    <PackageReference Include="MUnique.OpenMU.Network" Version="0.9.8" />
    <PackageReference Include="MUnique.OpenMU.Network.Packets" Version="0.9.8" />
    <PackageReference Include="NLayer" Version="1.16.0" />
  </ItemGroup>

  <!-- appsettings.json -->
  <ItemGroup Condition="'$(TargetFramework)'=='net9.0-android'">
    <AndroidAsset Include="appsettings.json" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Controls\UI\Game\Layouts\*.json" />
    <EmbeddedResource Include="Data\gates.json" />
    <EmbeddedResource Include="Data\item.bmd" />
    <EmbeddedResource Include="Data\player.bmd" />
    <EmbeddedResource Include="Data\skills.json" />
    <EmbeddedResource Include="Data\bmd_blending_config.json" />
  </ItemGroup>
  <ItemGroup Condition="'$(TargetFramework)'!='net9.0-android'">
    <None Update="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Client.Data\Client.Data.csproj" />
  </ItemGroup>
</Project>
